<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#101010"
    android:padding="16dp"
    android:gravity="center">

    <!-- Player Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Player: X"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>

    <!-- Game Board -->
    <GridLayout
        android:id="@+id/boardGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <!-- 9 Buttons for Board Cells -->
        <Button android:id="@+id/cell0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button android:id="@+id/cell1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button android:id="@+id/cell2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button android:id="@+id/cell3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button android:id="@+id/cell4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button android:id="@+id/cell5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button android:id="@+id/cell6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button android:id="@+id/cell7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button android:id="@+id/cell8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_margin="4dp"/>
    </GridLayout>

    <!-- Reset Button -->
    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="30dp"/>
</LinearLayout>